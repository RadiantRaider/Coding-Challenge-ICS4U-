//sets the variables for columns and rows.
var cols, rows;

//sets the size of a individual cell in the maze and makes an empty array for cells
var w = 40;
var cells = [];
//used to track current cell
var current;

function setup() {
  //makes the program canvas
  createCanvas(400, 400);
  //calculates how meny cells will be in the maze grid
  cols = floor(width/w);
  rows = floor(height/w);
  
  //creates the all the cell entities
  for(var j = 0; j < rows; j++){
     for(var i = 0; i < cols; i++){
     //variable for making a new cell in the maze
       var cell = new Cell(i, j);
       //adds the new cell into the maze
       cells.push(cell);
     }
  }
}


function draw() {
  background(220);
  for(var i = 0; i < cells.length; i++){
    cells[i].show();
  }
}


function Cell(i, j){
  this.i = i;
  this.j = j;
  this.walls = [true,true,true,true];

  this.show = function(){
    var x = this.i*w;
    var y = this.j*w;
    
    stroke(255);
     if(this.walls[0]){
      line(x,y, x+w,y);
     }

     if(this.walls[1]){
      line(x+w,y, x+w,y+w);
     } 

     if(this.walls[2]){
      line(x,y+w,x+w,y+w);
     } 

    if(this.walls[3]){
      line(x,y,x,y+w);
     } 
     
    // noFill();
    // rect(x, y, w, w);
  }
}
